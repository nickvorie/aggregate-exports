{
	"compilerOptions": {
		"baseUrl": "src",
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "ESNext",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": false,
		"outDir": "dist",
		"paths": {
			"@/*": [
				"*"
			]
		},
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"include": [
		"src/**/*",
		"test/**/*"
	],
	"exclude": [
		"node_modules"
	]
}